<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/game_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_gray"/>
    
    <ImageView
        android:id="@+id/rocket_exhaust"
        android:layout_width="@dimen/rocket_exhaust_width"
        android:layout_height="@dimen/rocket_exhaust_height"
        android:visibility="gone"
        android:src="@drawable/ship_protgonist_exhaust" />
    
  	<RelativeLayout
        android:id="@+id/btn_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_panel_height"
        android:background="@drawable/control_panel_background"
	    android:layout_alignParentBottom="true" >
       
	    
	    <RelativeLayout
	        android:id="@+id/btns_wrap"
		    android:layout_width="300dp"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:layout_marginBottom="@dimen/activity_margin_small"
	        >
			<Button
			    android:id="@+id/btnLeft"
			    android:layout_width="@dimen/btn_large_len"
			    android:layout_height="@dimen/btn_large_len"
			    android:layout_alignParentLeft="true"
			    android:background="@drawable/btn_red" />
			
			<Button
			    android:id="@+id/btnMiddle"
			    android:layout_width="@dimen/btn_small_width"
			    android:layout_height="@dimen/btn_small_height"
				android:layout_centerInParent="true"
			    android:background="@drawable/btn_green" />
		
			<Button
			    android:id="@+id/btnRight"
			    android:layout_width="@dimen/btn_large_len"
			    android:layout_height="@dimen/btn_large_len"
			    android:layout_alignParentRight="true"
			    android:background="@drawable/btn_red" />
		</RelativeLayout>

	    <ProgressBar
	        android:id="@+id/health_bar"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true" />
	    
	    
	    <TextView
	        android:id="@+id/score_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/btns_wrap"
	        android:layout_centerHorizontal="true"
        	android:textAppearance="@style/score_and_ammo_text"
	        android:text="0" />
	    
	    
		<TextView
		    android:id="@+id/ammo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:layout_centerInParent="true"
        	android:textAppearance="@style/score_and_ammo_text"
			android:visibility="gone"
        	android:text="0" />

	</RelativeLayout>

    <friendlies.ProtagonistView
        android:id="@+id/rocket_game"
        android:layout_width="@dimen/rocket_game_width"
        android:layout_height="@dimen/rocket_game_height"
        android:layout_above="@+id/btn_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_margin_small"
        android:src="@drawable/ship_protagonist_rocket" />

</RelativeLayout>
