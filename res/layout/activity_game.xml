<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
    
    <!-- GAME PLAY LAYOUT -->
    <RelativeLayout
        android:id="@+id/gameplay_layout"
        android:background="@drawable/space1_0"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
	    <ImageView
	        android:id="@+id/rocket_exhaust"
	        android:layout_width="@dimen/exhaust_width"
	        android:layout_height="@dimen/exhaust_height"
	        android:visibility="gone"
	        android:src="@drawable/ship_protgonist_exhaust" />
	    
	  	<RelativeLayout
	        android:id="@+id/control_panel"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/control_panel_height"
	        android:background="@drawable/control_panel_background"
		    android:layout_alignParentBottom="true" >
	       
		    
		    <RelativeLayout
		        android:id="@+id/btns_wrap"
			    android:layout_width="300dp"
			    android:layout_height="wrap_content"
			    android:layout_centerInParent="true"
			    android:layout_marginBottom="@dimen/activity_margin_small"
		        >
				<Button
				    android:id="@+id/btn_move_left"
				    android:layout_width="@dimen/btn_large_len"
				    android:layout_height="@dimen/btn_large_len"
				    android:layout_alignParentLeft="true"
				    android:background="@drawable/btn_red" />
				
				<Button
				    android:id="@+id/btn_shoot"
				    android:layout_width="@dimen/btn_small_width"
				    android:layout_height="@dimen/btn_large_len"
	        		android:visibility="gone"
					android:layout_centerInParent="true"
				    android:background="@drawable/btn_green" />
			
				<Button
				    android:id="@+id/btn_move_right"
				    android:layout_width="@dimen/btn_large_len"
				    android:layout_height="@dimen/btn_large_len"
				    android:layout_alignParentRight="true"
				    android:background="@drawable/btn_red" />
			</RelativeLayout>
	
		    <ProgressBar
		        android:id="@+id/health_bar"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true" />
		    
		</RelativeLayout>
    </RelativeLayout>
    
    
    <!-- STORE LAYOUT -->
    <RelativeLayout
        android:id="@+id/store_layout"
        android:layout_width="match_parent"
        android:background="@drawable/space1_0"
        android:layout_height="match_parent"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/btn_new_gun"
            android:layout_marginBottom="@dimen/activity_margin_large"
            android:gravity="center"
            android:text="We&apos;ve found found refuge for the night. Scrap salvaged throughout the day can be used for repairs and upgrades." />
        
		<RelativeLayout
		    android:id="@+id/resource_layout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_above="@+id/explanation"
		    android:layout_centerHorizontal="true"
		    >
	        <TextView
	            android:id="@+id/resource_count"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@+id/resources_img"
	            android:text="0"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <ImageView
	            android:id="@+id/resources_img"
	            android:layout_width="@dimen/resource_img_len"
	            android:layout_height="@dimen/resource_img_len"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
	            android:src="@drawable/resources" />
		</RelativeLayout>

		<ImageButton
		    android:id="@+id/btn_inc_bullet_dmg"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="@dimen/resource_img_len"
		    android:layout_height="@dimen/resource_img_len"
		    android:layout_centerInParent="true"
		    android:src="@drawable/bullet_damage"
		    android:background="@drawable/white_center_red_outline"
		    android:contentDescription="bulletDmg"
		    android:text="bulletDmg" />

		<ImageButton
		    android:id="@+id/btn_new_gun"
		    style="?android:attr/buttonStyleSmall"
		    android:src="@drawable/missile"
		    android:layout_width="@dimen/resource_img_len"
		    android:layout_height="@dimen/resource_img_len"
		    android:layout_above="@+id/btn_inc_bullet_dmg"
		    android:layout_marginBottom="@dimen/store_btn_margin_vertical"
		    android:layout_toRightOf="@+id/btn_inc_bullet_dmg"
		    android:background="@drawable/white_center_red_outline"
		    android:contentDescription="new gun"
		    android:text="gun" />

		<ImageButton
		    android:id="@+id/btn_heal"
		    android:src="@drawable/heal"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="@dimen/resource_img_len"
		    android:layout_height="@dimen/resource_img_len"
		    android:layout_alignBaseline="@+id/btn_new_gun"
		    android:layout_alignBottom="@+id/btn_new_gun"
		    android:background="@drawable/white_center_red_outline"
		    android:layout_toLeftOf="@+id/btn_inc_bullet_dmg"
		    android:contentDescription="heal"
		    android:text="" />

		<ImageButton
		    android:id="@+id/btn_inc_bullet_speed"
		    android:src="@drawable/bullet_speed"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="@dimen/resource_img_len"
		    android:layout_height="@dimen/resource_img_len"
		    android:background="@drawable/white_center_red_outline"
		    android:layout_alignBaseline="@+id/btn_inc_bullet_dmg"
		    android:layout_alignBottom="@+id/btn_inc_bullet_dmg"
		    android:layout_toLeftOf="@+id/btn_heal"
		    android:contentDescription="bulletspeed"
		    android:text="bulletspeed" />

		<ImageButton
		    android:id="@+id/btn_inc_bullet_freq"
		    android:src="@drawable/bullet_freq"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="@dimen/resource_img_len"
		    android:layout_height="@dimen/resource_img_len"
		    android:background="@drawable/white_center_red_outline"
		    android:layout_alignBaseline="@+id/btn_inc_bullet_dmg"
		    android:layout_alignBottom="@+id/btn_inc_bullet_dmg"
		    android:layout_toRightOf="@+id/btn_new_gun"
		    android:contentDescription="bulletfreq"
		    android:text="bulletfreq" />

		<ImageButton
		    android:id="@+id/btn_inc_score_weight"
		    android:src="@drawable/resources"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="@dimen/resource_img_len"
		    android:layout_height="@dimen/resource_img_len"
		    android:background="@drawable/white_center_red_outline"
		    android:layout_alignBaseline="@+id/btn_purchase_friend"
		    android:layout_alignBottom="@+id/btn_purchase_friend"
		    android:layout_toRightOf="@+id/btn_inc_bullet_dmg"
		    android:contentDescription="score increase"
		    android:text="score" />

		<ImageButton
		    android:id="@+id/btn_purchase_friend"
		    android:src="@drawable/ship_protagonist"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="@dimen/resource_img_len"
		    android:layout_height="@dimen/resource_img_len"
		    android:layout_below="@+id/btn_inc_bullet_dmg"
		    android:layout_marginTop="@dimen/store_btn_margin_vertical"
		    android:background="@drawable/white_center_red_outline"
		    android:layout_toLeftOf="@+id/btn_inc_bullet_dmg"
		    android:contentDescription="friend"
		    android:text="friend" />

		<ImageButton
		    android:id="@+id/start_next_level"
		    android:src="@drawable/ic_action_play"
		    android:layout_width="@dimen/store_btn_next_level_len"
		    android:layout_height="@dimen/store_btn_next_level_len"
		    android:layout_centerHorizontal="true"
        	android:background="@drawable/btn_gray"
        	android:layout_alignParentBottom="true"
		    android:layout_marginBottom="@dimen/activity_margin_med"
		    android:text="Next Level" />
	    
	    </RelativeLayout>

</RelativeLayout>
